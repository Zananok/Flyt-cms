<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean class="no.kantega.publishing.api.plugin.OpenAksessPluginAdapter">
        <constructor-arg value="org.kantega.openaksess.groovyplugin"/>
        <property name="handlerMappings">
            <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
                <property name="alwaysUseFullPath" value="true"/>
                <property name="mappings">
                    <value>
                        /admin/groovy.action=groovyConsole
                    </value>
                </property>
                <property name="interceptors">
                    <bean class="no.kantega.publishing.security.interceptors.AdminRoleInterceptor"/>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="groovyConsole" class="no.kantega.openaksess.groovyconsole.GroovyConsole">
        <property name="rootApplicationContext" ref="rootApplicationContext"/>
    </bean>

</beans>
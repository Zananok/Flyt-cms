<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="no.kantega.publishing.api.plugin.OpenAksessPluginAdapter">
        <constructor-arg value="org.kantega.openaksess.plugins.failedsubmissions"/>
        <property name="handlerMappings">
            <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
                <property name="alwaysUseFullPath" value="true"/>
                <property name="mappings">
                    <value>/oap/administration/failedSubmissions=failedSubmissionsController</value>
                </property>
            </bean>
        </property>
        <property name="UIContributions">
            <bean class="org.kantega.openaksess.plugins.failedSubmissions.FailedSubmissionsAdminMenuContribution"/>
        </property>
    </bean>

    <bean id="failedSubmissionsController" class="org.kantega.openaksess.plugins.failedSubmissions.FailedSubmissionsController">
        <property name="eventLog">
            <bean class="no.kantega.publishing.common.ao.EventLogAO">
                <property name="dataSource" ref="aksessDataSource"/>
            </bean>
        </property>
    </bean>


</beans>
<web-app>
    <display-name>Aksess</display-name>
    <description>Kantega Aksess Publisering for Java</description>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>

    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>no.kantega.publishing.security.filter.AdminFilter</filter-class>
    </filter>

    <filter>
        <filter-name>UrlRewriteFilter</filter-name>
        <filter-class>no.kantega.publishing.client.filter.ContentRewriteFilter</filter-class>
    </filter>

    <filter>
        <filter-name>MultipartFilter</filter-name>
        <filter-class>org.springframework.web.multipart.support.MultipartFilter</filter-class>
    </filter>

    <filter>
        <filter-name>ParamEncodingFilter</filter-name>
        <filter-class>no.kantega.commons.filter.ParamEncodingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ParamEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>MultipartFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UrlRewriteFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>no.kantega.publishing.spring.AksessContextLoaderListener</listener-class>
    </listener>

    <listener>
        <listener-class>no.kantega.commons.log.LogInitListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>aksess</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>useradmin</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>dwr</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
        <init-param>
            <param-name>debug</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>crossDomainSessionSecurity</param-name>
            <param-value>false</param-value>
        </init-param>
    </servlet>


    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>/content.ap</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>*.asp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>/attachment.ap</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>/attachments/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>/multimedia.ap</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>/multimedia/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>/rss.ap</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>*.action</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>useradmin</servlet-name>
        <url-pattern>/admin/administration/useradmin/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>dwr</servlet-name>
        <url-pattern>/admin/dwr/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jnlp</url-pattern>
    </servlet-mapping>
    <!-- jjs = Dynamic (jsp) JavaScript files -->
    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jjs</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>/sitemap.xml</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>aksess</servlet-name>
        <url-pattern>/robots.txt</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>content.ap</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>

    <error-page>
        <error-code>404</error-code>
        <location>/content.ap</location>
    </error-page>
</web-app>
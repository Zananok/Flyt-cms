<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>no.kantega.publishing</groupId>
        <artifactId>aksess</artifactId>
        <version>6.0dev</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>no.kantega.publishing</groupId>
    <artifactId>db</artifactId>
    <packaging>jar</packaging>

    <name>Aksess db</name>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-ddlutils-plugin</artifactId>
                <groupId>org.apache.db.ddlutils.plugins</groupId>
                <version>1.1-kantega</version>

                <dependencies>
                    <dependency>
                        <groupId>ojdbc14</groupId>
                        <artifactId>ojdbc14</artifactId>
                        <version>10.2.0.1.0</version>
                    </dependency>
                </dependencies>


                <configuration>
                    <ddl2dbTasks>
                        <mkdir dir="${basedir}/target/schemas/"/>

                        <ddlToDatabase databaseType="${dbtype}">

                            <fileset dir="src/main/schema">
                                <include name="aksess-dbschema.xml"/>
                            </fileset>
                            <writeSchemaSqlToFile outputFile="${basedir}/target/schemas/aksess-database-${dbtype}.sql"
                                                  doDrops="false"/>
                        </ddlToDatabase>
                    </ddl2dbTasks>

                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>dbdiff</id>

            <build>
                <plugins>


                    <plugin>
                        <artifactId>maven-ddlutils-plugin</artifactId>
                        <groupId>org.apache.db.ddlutils.plugins</groupId>
                        <version>1.1-kantega</version>

                        <dependencies>
                            <dependency>
                                <groupId>ojdbc14</groupId>
                                <artifactId>ojdbc14</artifactId>
                                <version>10.2.0.1.0</version>
                            </dependency>
                        </dependencies>


                        <configuration>
                            <ddl2dbTasks>
                                <mkdir dir="${basedir}/target/schemas/"/>

                                <ddlToDatabase schemapattern="SIT" databaseType="${dbtype}">
                                    <database
                                            url="jdbc:oracle:thin:@oracle:1521:orcl"
                                            driverClassName="oracle.jdbc.driver.OracleDriver"
                                            username="SIT"
                                            password="kantega"/>

                                    <fileset dir="src/main/schema">
                                        <include name="aksess-dbschema.xml"/>
                                    </fileset>
                                    <writeSchemaSqlToFile
                                            outputFile="${basedir}/target/schemas/aksess-database-diff-${dbtype}.sql"
                                            doDrops="false" alterDatabase="true"/>
                                </ddlToDatabase>
                            </ddl2dbTasks>

                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>dbcreateschema</id>

            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-ddlutils-plugin</artifactId>
                        <groupId>org.apache.db.ddlutils.plugins</groupId>
                        <version>1.1-kantega</version>

                        <dependencies>
                            <dependency>
                                <groupId>ojdbc14</groupId>
                                <artifactId>ojdbc14</artifactId>
                                <version>10.2.0.1.0</version>
                            </dependency>
                        </dependencies>


                        <configuration>
                            <db2dllTasks>
                                <echo>Creating XML schema from database..</echo>
                                <mkdir dir="${basedir}/target/schemas/"/>

                                <databaseToDdl schemapattern="SIT" databaseType="${dbtype}">
                                    <database
                                            url="jdbc:oracle:thin:@oracle:1521:orcl"
                                            driverClassName="oracle.jdbc.driver.OracleDriver"
                                            username="SIT"
                                            password="kantega"/>

                                    <writeSchemaToFile outputFile="${basedir}/target/schemas/aksess-schema.xml"/>
                                    <!--<writeDataToFile outputFile="${basedir}/target/data.xml"/>-->
                                </databaseToDdl>
                            </db2dllTasks>

                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>

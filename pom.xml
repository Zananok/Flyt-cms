<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.kantega.opensource-parent</groupId>
        <artifactId>opensource-parent</artifactId>
        <version>1.1</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.kantega.openaksess</groupId>
    <artifactId>openaksess</artifactId>
    <packaging>pom</packaging>
    <version>6.1-SNAPSHOT</version>
    <name>OpenAksess</name>
    <url>http://opensource.kantega.no/aksess</url>
    <scm>
        <connection>scm:svn:https://opensource.kantega.no/svn/openaksess/trunk/</connection>
    </scm>

    <modules>
        <module>modules/db</module>
        <module>modules/api</module>
        <module>modules/commons</module>
        <module>modules/core</module>
        <module>modules/install</module>
        <module>modules/search</module>
        <module>modules/test</module>
        <module>modules/useradmin</module>
        <module>modules/webapp</module>
    </modules>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.5</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-all</artifactId>
            <version>1.7</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-test</artifactId>
            <version>${springframework.version}</version>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring</artifactId>
                <version>${springframework.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-webmvc</artifactId>
                <version>${springframework.version}</version>
            </dependency>
            <dependency>
                <groupId>log4j</groupId>
                <artifactId>log4j</artifactId>
                <version>${log4j.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <resources>
            <resource>
                <directory>src/resources</directory>
            </resource>
        </resources>
    </build>

    <properties>
        <axis.version>1.3</axis.version>
        <codec.version>1.2</codec.version>
        <commons-pool.version>1.3</commons-pool.version>
        <commons-logging.version>1.0.4</commons-logging.version>
        <httpclient.version>3.1</httpclient.version>
        <fileupload.version>1.2.1</fileupload.version>
        <lucene.version>2.4.0</lucene.version>
        <log4j.version>1.2.9</log4j.version>
        <nekohtml.version>0.9.5</nekohtml.version>
        <!-- 3.1-FINAL bygger ikke -->
        <poi.version>3.0-FINAL</poi.version>
        <springframework.version>2.5.6.SEC01</springframework.version>
        <spring.binding.version>1.0ea</spring.binding.version>
        <spring.webflow.version>1.0ea</spring.webflow.version>
        <securityapi.version>1.10</securityapi.version>
        <securityapi.openimpl.version>1.1</securityapi.openimpl.version>
        <xalan.version>2.7.1</xalan.version>
        <xercesImpl.version>2.9.1</xercesImpl.version>
        <xml-apis.version>1.0.b2</xml-apis.version>
    </properties>


</project>
